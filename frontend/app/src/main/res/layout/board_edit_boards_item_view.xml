<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:id="@+id/boardEditContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_small_background"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_table_sheet"
        app:tint="@color/primary_icon_color"/>
    <EditText
        android:id="@+id/etBoardName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/primary_word_color"
        android:singleLine="true"
        tools:text="asdfasdfasdfasdfasdf"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/tvBoardName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        android:textColor="@color/primary_word_color"
        android:singleLine="true"
        android:clickable="false"
        tools:text="asdfasdfasdfasdfasdf"
        android:background="@color/transparent"/>
    <ImageButton
        android:id="@+id/btnConfirmRename"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:paddingHorizontal="4dp"
        android:visibility="gone"
        android:layout_marginHorizontal="4dp"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_tick"
        app:tint="@color/white"/>
    <ImageButton
        android:id="@+id/btnMoreOptions"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:paddingHorizontal="4dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_more_setting"
        app:tint="@color/primary_icon_color"/>
</LinearLayout>