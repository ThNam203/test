<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.page_add_board"
    android:background="@color/primary_color"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/transparent"
        android:contentDescription="btn add person"
        android:minHeight="48dp"
        android:src="@drawable/ic_close"
        app:tint="@color/primary_icon_color" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your template"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:textColor="@color/primary_word_color"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can edit this template as you go"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@color/transparent"
        android:textColor="@color/primary_word_color"
        android:textSize="24dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:id="@+id/layout_create_new_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/background_btn_corner"
            android:backgroundTint="@color/teal_200"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/image_task_board" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start from scratch"
                    android:paddingLeft="15dp"
                    android:background="@color/transparent"
                    android:textColor="@color/primary_word_color"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_create_new_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/primary_btn_color"
                android:layout_gravity="center"
                android:text="Create new board"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>