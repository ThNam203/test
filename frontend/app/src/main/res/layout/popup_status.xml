<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_page_corner_top_left_and_right"
    android:backgroundTint="@color/primary_third_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="55dp"
        android:paddingBottom="15dp">
        <ImageButton
            android:id="@+id/btn_close_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/transparent"
            android:minHeight="48dp"
            android:src="@drawable/ic_close"
            app:tint="@color/primary_icon_color" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_splitter_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingHorizontal="30dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/status_working"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_btn_corner"
                android:backgroundTint="@color/orange"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Working on it"
                android:textColor="@color/primary_word_color"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/status_stuck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_btn_corner"
                android:backgroundTint="@color/light_red"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Stuck"
                android:textColor="@color/primary_word_color"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/status_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_btn_corner"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Done"
                android:textColor="@color/primary_word_color"
                android:textSize="24dp" />
