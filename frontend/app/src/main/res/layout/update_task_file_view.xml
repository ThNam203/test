<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:background="@color/black">
    <FrameLayout
        android:id="@+id/dontCareAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/btnRemoveFile"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_cancel"
            android:background="@color/white"
            app:tint="@color/black"
            android:layout_gravity="top|end"/>
        <ImageView
            android:id="@+id/ivFileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_file"
            app:tint="@color/white"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="image.png"
        android:textColor="@color/primary_word_color"
        app:layout_constraintTop_toBottomOf="@id/dontCareAboutMe"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>