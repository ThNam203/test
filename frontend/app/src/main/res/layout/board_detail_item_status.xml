<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statusItemContainer"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvColumnTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_textsize"
        android:textColor="@color/primary_word_color"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvTaskStatusContent"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="@color/primary_word_second_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/background_board_detail_cell"
        tools:text="Working on it"/>
</LinearLayout>