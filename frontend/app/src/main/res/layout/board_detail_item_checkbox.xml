<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    android:id="@+id/userItemContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvColumnTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/primary_word_color"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/checkBoxItemContainer"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_corner"
            android:backgroundTint="@color/primary_second_color">
                <CheckBox
                    android:id="@+id/checkBoxItemCheckbox"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/tableview_default_height"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    android:layout_gravity="center"
                    android:background="@color/transparent" />
        </FrameLayout>
</LinearLayout>