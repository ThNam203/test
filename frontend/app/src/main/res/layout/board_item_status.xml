<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statusItemContainer"
    android:layout_width="150dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTaskStatusContent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="@color/primary_word_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/background_board_cell"
        android:backgroundTint="@color/primary_second_color"
        tools:text="Working on it"/>
</LinearLayout>