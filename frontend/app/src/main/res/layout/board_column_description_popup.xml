<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_page_corner_top_left_and_right"
    android:backgroundTint="@color/primary_second_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingHorizontal="10dp"
        android:paddingBottom="15dp">
        <ImageButton
            android:id="@+id/btn_close_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/transparent"
            android:minHeight="48dp"
            android:src="@drawable/ic_close"
            app:tint="@color/primary_icon_color" />
        <TextView
            android:id="@+id/textItemTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Status"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/primary_word_color"
            android:textSize="28dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnSaveTextItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="invisible"
            android:singleLine="true"
            android:layout_marginEnd="16dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_btn_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_splitter_color" />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Column currently has no description"
        android:minHeight="100dp"
        android:maxHeight="200dp"
        android:textColorHint="@color/primary_word_second_color"
        android:textColor="@color/primary_word_color"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:background="@null"/>
    <LinearLayout
        android:id="@+id/editDescriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your description..."
            android:minHeight="100dp"
            android:maxHeight="200dp"
            android:textColorHint="@color/primary_word_color"
            android:textColor="@color/primary_word_color"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/btnClearDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Clear"
            android:textSize="18sp"
            android:textColor="#c1d3ea"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</LinearLayout>