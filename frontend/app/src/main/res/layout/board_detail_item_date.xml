<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tvColumnTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_textsize"
        android:textColor="@color/primary_word_color"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/background_btn_corner"
        android:backgroundTint="@color/primary_second_color">
        <ImageView
            android:id="@+id/deadlineClock"
            android:layout_width="16dp"
            android:layout_height="@dimen/tableview_default_height"
            android:src="@drawable/ic_alarm"
            android:visibility="gone"
            app:tint="@color/light_red"/>
        <TextView
            android:id="@+id/tvDateItemContent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/tableview_default_height"
            android:singleLine="true"
            android:textColor="@color/primary_word_second_color"
            android:textSize="@dimen/tableview_default_text_size"
            tools:text="Today"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>