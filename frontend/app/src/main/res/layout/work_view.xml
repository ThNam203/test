<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_work"
    android:elevation="5dp"
    android:layout_margin="8dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvRowTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/primary_word_color"
        android:textSize="@dimen/tableview_default_text_size"
        tools:text="Header title" />
    <ImageView
        android:id="@+id/doneTick"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_tick"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        app:tint="@color/blue"/>
</LinearLayout>
