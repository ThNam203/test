<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_page_corner_top_left_and_right"
    android:backgroundTint="@color/primary_second_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">
        <ImageButton
            android:id="@+id/btn_close_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/transparent"
            android:contentDescription="btn add person"
            android:minHeight="48dp"
            android:src="@drawable/ic_close"
            app:tint="@color/primary_icon_color" />

        <TextView
            android:id="@+id/tvDateItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/primary_word_color"
            android:textSize="@dimen/large_textsize"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveDateItem"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:singleLine="true"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="@dimen/small_textsize"
            android:textColor="@color/white"
            android:background="@drawable/background_btn_corner"
            android:backgroundTint="@color/primary_btn_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_splitter_color" />
    <LinearLayout
        android:id="@+id/dateItemTimeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tvAddTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add time"
            android:textSize="@dimen/normal_textsize"
            android:textColor="@color/primary_word_color"/>
        <TextView
            android:id="@+id/tvTimeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="09:40PM"
            android:textSize="@dimen/normal_textsize"
            android:layout_gravity="end"
            android:textColor="@color/primary_word_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateItemDateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/tvAddDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add date"
            android:textSize="@dimen/normal_textsize"
            android:textColor="@color/primary_word_color"/>
        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="Thu ba Thang 7"
            android:textSize="@dimen/normal_textsize"
            android:layout_gravity="end"
            android:textColor="@color/primary_word_color"/>
    </LinearLayout>
</LinearLayout>