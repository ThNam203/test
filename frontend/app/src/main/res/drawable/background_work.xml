<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/blue" /> <!-- Màu xanh (#0000FF) cho cạnh trái -->
            <padding android:left="4dp" /> <!-- Khoảng cách từ cạnh trái đến nội dung -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp" android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
            <solid android:color="#FFFFFF" /> <!-- Màu trắng (#FFFFFF) cho nền button -->
            <padding android:left="8dp" android:right="8dp"/><!-- Khoảng cách từ cạnh trái đến nội dung -->
        </shape>
    </item>
</layer-list>